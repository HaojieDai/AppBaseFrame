<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoadingView">
        <attr name="size" format="dimension" />
        <attr name="android:color" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="left_show_image" format="boolean" />
        <attr name="left_src" format="reference" />
        <attr name="left_size" format="dimension" />
        <attr name="left_color" format="color" />
        <attr name="left_text" format="string" />
        <attr name="middle_text" format="string" />
        <attr name="middle_size" format="dimension" />
        <attr name="middle_color" format="color" />
        <attr name="right_show_image" format="boolean" />
        <attr name="right_src" format="reference" />
        <attr name="right_size" format="dimension" />
        <attr name="right_color" format="color" />
        <attr name="right_text" format="string" />
        <attr name="show_divider" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RadiusImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="selected_mask_color" format="color" />
        <attr name="selected_border_color" format="color" />
        <attr name="selected_border_width" format="dimension" />
        <attr name="corner_radius" format="dimension" />
        <attr name="is_oval" format="boolean" />
        <attr name="is_circle" format="boolean" />
        <attr name="is_touch_select_mode_enabled" format="boolean" />
    </declare-styleable>
    <attr name="RadiusImageView" format="reference" />

    <declare-styleable name="AutoRollBanner">
        <attr name="normalDotSrc" format="reference" />
        <attr name="selectDotSrc" format="reference" />
        <attr name="marginBetweenDots" format="dimension"/>
        <attr name="dotsBottomMargin" format="dimension"/>
        <attr name="dotSize" format="dimension"/>
    </declare-styleable>
</resources>
